<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".Start"
    android:background="#92bee9">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/linLayoutV"
        android:background="#92bee9">

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/imageView2"
            android:layout_gravity="center"
            android:src="@drawable/logo" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView4"
            android:layout_gravity="center_horizontal" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView3"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/shoot"
            android:layout_marginTop="-70dp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/duck"
            android:layout_marginTop="-90dp"
            android:layout_marginLeft="-70dp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/hunt"
            android:layout_gravity="center_horizontal"
            android:text="@string/hunt"
            android:textColor="#ffffff"
            android:textSize="80sp"
            android:textAlignment="center"
            android:textStyle="bold|italic"
            android:layout_marginTop="-50dp"
            android:background="#00ffffff"
            android:inputType="none"
            android:editable="false" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/start"
            android:id="@+id/start"
            android:background="#9dffffff"
            android:textAlignment="center"
            android:textColor="#082463"
            android:textSize="20sp"
            android:textStyle="bold"
            android:padding="10dp"
            android:clickable="true"
            android:layout_gravity="center"
            android:layout_marginTop="-140dp"
            android:layout_marginLeft="80dp" />
    </LinearLayout>

</RelativeLayout>
